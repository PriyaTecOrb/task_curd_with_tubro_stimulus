<div class="block">
  <%= turbo_frame_tag "edit_task_form_#{task.id}" do %>
    <%= form_with(model: task, class:"text-lg inline-block my-3 w-10") do |form| %>
      <%= form.check_box :completed,data: {
                           id: task.id,
                           action: "click->tasks#toggle"
                         },
                         class: "align-middle bg-gray-50 border-gray-300 focus:ring-3 focus:ring-blue-300 h-5 w-5 rounded checked:bg-green-500" %>

      

    <% end %>
    <div id="task_<%=task.id%>" class="inline-block my-3 w-72"><%= task.description %></div>
    <%= link_to "Edit", edit_task_path(task), class: "btn bg-gray-100", data: { "turbo-frame": "edit_task_form_#{task.id}"}%>
    <div class="inline-block ml-2">
      
      <%= link_to "Delete","#",class: "btn bg-red-100",
            data: {
              id: task.id,
              turbo_frame: "index_tasks",
              # turbo_confirm: "Are you sure you want to delete this task?",
              # turbo_method: :delete,
              # turbo_controller: "tasks",
              action: "click->tasks#delete"
            } %>
    </div>
  <%end%>
</div>